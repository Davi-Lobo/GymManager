{% extends "layout.njk" %}

{%block content%}
    <div class="_grid">
        <div class="info-container">
            <div class="image-box">
                <img src="{{member.avatar_url}}" alt="Workout Image">
            </div>

            <div class="info-box">
                <div class="content-title">
                    <h3 class="title">Detalhes</h3>
                </div>

                <div class="item">
                    <label class="label">Nome</label>
                    <span class="info">{{member.name}}</span>
                </div>

                <div class="item">
                    <label class="label">Idade</label>
                    <span class="info">{{member.age}}</span>
                </div>

                <div class="item">
                    <label class="label">Sexo</label>
                    <span class="info">{{member.gender}}</span>
                </div>

                <div class="item">
                    <label class="label">Acompanhamento</label>

                    {% for skill in member.skills %}
                        <span class="info -highlighted">{{skill}}</span>
                    {% endfor %}
                </div>

                <div class="item">
                    <label class="label">Desde</label>
                    <span class="info">{{member.created_at}}</span>
                </div>

                <a href="/members/{{member.id}}/edit" class="button"><span>Editar</span></a>
            </div>
        </div>
    </div>
{%endblock content%}
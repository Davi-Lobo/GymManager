<div class="item">
    <label for="avatarUrl" class="label">Avatar URL</label>
    <input 
        id="avatarUrl" 
        type="url" 
        class="info" 
        name="avatar_url"
        placeholder="http://"
        value="{{instructor.avatar_url}}"
    />
</div>

<div class="item">
    <label for="instructorName" class="label">Nome</label>
    <input id="instructorName" 
        type="text" 
        class="info" 
        name="name"
        placeholder="Nome do instrutor"
        value="{{instructor.name}}"
    />
</div>

<div class="item">
    <label for="instructorBirth" class="label">Data de nascimento</label>
    <input 
        id="instructorBirth" 
        type="date" 
        class="info"
        name="birth"
        value="instructor.birth"
    />
</div>

<div class="item -flex">
    <span class="label">Sexo</span>

    <label for="male" class="info -highlighted -flex">
        <input
            id="male" 
            type="radio" 
            name="gender"
            value="M"
           {% if instructor.gender == 'M' %}
           checked
           {% endif %}
        />
        Masculino
    </label>
    <label for="female" class="info -highlighted -flex">
        <input
            id="female" 
            type="radio" 
            name="gender"
            value="F"
            {% if instructor.gender == 'F' %}
           checked
           {% endif %}
        />
        Feminino
    </label>
</div>

<div class="item">
    <label for="instructorSkill" class="label">Area de Atuação</label>
    <input id="instructorSkill" 
        type="text" 
        class="info" 
        name="skills"
        placeholder="Insira as áreas do instrutor"
        value="{{instructor.skills}}"
    />
</div>
{% extends "layout.njk" %}

{%block content%}
    <div class="_grid">

        <div class="section-container">
            <a href="instructors/create">Novo instrutor</a>

            <table class="table-container">
                <thead>
                    <tr>
                        <th>Instrutor</th>
                        <th>Atendimento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for instructor in instructors %}
                        <tr>
                            <td>{{instructor.name}}</td>
                            <td>{{instructor.skills}}</td>
                            <td>
                                <a href="/instructors/{{instructor.id}}">Ver</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{%endblock content%}
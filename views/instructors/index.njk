{% extends "layout.njk" %}

{%block content%}
    <div class="_grid">

        <div class="section-container">
            <a href="instructors/create">Novo instrutor</a>

            <table class="table-container">
                <thead>
                    <tr class="titles">
                        <th>Instrutor</th>
                        <th>Atendimento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for instructor in instructors %}
                        <tr>
                            <td class="instructor-cell">
                                <img class="avatar" src="{{instructor.avatar_url}}" alt="Instructor Avatar" width="80" height="80"/>
                                <span class="name">{{instructor.name}}</span>
                            </td>
                            <td>{{instructor.skills}}</td>
                            <td>
                                <a class="button" href="/instructors/{{instructor.id}}"><span>Ver</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{%endblock content%}
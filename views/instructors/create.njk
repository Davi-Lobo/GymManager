{% extends "layout.njk" %}

{%block content%}
    <div class="section-container _grid">
        <form class="info-container" method="POST" action="/instructors">
            <div class="image-box">
                <img src="https://source.unsplash.com/collection/3465564/600x500" alt="Workout Image">
            </div>

            <div class="info-box -form">
                <div class="content-title">
                    <h3 class="title">Criar novo instrutor</h3>
                </div>

                 <div class="item">
                    <label for="avatarUrl" class="label">Avatar URL</label>
                    <input 
                        id="avatarUrl" 
                        type="url" 
                        class="info" 
                        name="avatar_url"
                        placeholder="http://"
                    />
                </div>

                <div class="item">
                    <label for="instructorName" class="label">Nome</label>
                    <input id="instructorName" 
                        type="text" 
                        class="info" 
                        name="name"
                        placeholder="Nome do instrutor"
                    />
                </div>

                <div class="item">
                    <label for="instructorBirth" class="label">Data de nascimento</label>
                    <input 
                        id="instructorBirth" 
                        type="date" 
                        class="info"
                        name="birth"
                    />
                </div>

                <div class="item -flex">
                    <span class="label">Sexo</span>

                    <label for="male" class="info -highlighted -flex">
                        <input
                            id="male" 
                            type="radio" 
                            name="gender"
                            value="M"
                            checked
                        />
                        Masculino
                    </label>
                    <label for="female" class="info -highlighted -flex">
                        <input
                            id="female" 
                            type="radio" 
                            name="gender"
                            value="F"
                        />
                        Feminino
                    </label>
                </div>

                <div class="item">
                    <label for="instructorSkill" class="label">Area de Atuação</label>
                    <input id="instructorSkill" 
                        type="text" 
                        class="info" 
                        name="skills"
                        placeholder="Insira as áreas do instrutor"
                    />
                </div>

                <button type="submit" class="submit-button"><span>Salvar</span></button>
            </div>
        </form>
    </div>
{%endblock content%}
{% extends "layout.njk" %}

{%block content%}
    <div class="section-container _grid">
        <form class="info-container" method="POST" action="/instructors?_method=PUT">
            <div class="image-box">
                <img src="https://source.unsplash.com/collection/3465564/600x500" alt="Workout Image">
            </div>

            <div class="info-box -form">
                <div class="content-title">
                    <h3 class="title">Editar informações</h3>
                </div>

                {% include 'instructors/fields.njk' %}

                <input 
                    type="hidden" 
                    name="id" 
                    value={{instructor.id}}
                > 

                <button type="submit" class="button"><span>Salvar</span></button>
            </div>
        </form>
    </div>
{%endblock content%}